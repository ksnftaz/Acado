<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <!-- Enhanced Class Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_marginBottom="8dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#FFFFFF">

            <!-- Class Name with Icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!--                <View-->
                <!--                    android:layout_width="4dp"-->
                <!--                    android:layout_height="28dp"-->
                <!--                    android:background="@android:color/white"-->
                <!--                    android:layout_marginEnd="12dp"-->
                <!--                    android:alpha="0.9" />-->

                <TextView
                    android:id="@+id/classNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer Science 101"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:letterSpacing="0.02" />

            </LinearLayout>

            <TextView
                android:id="@+id/classSectionText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                />


            <!-- Class Info Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Class Code Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">


                    <TextView
                        android:id="@+id/classCodeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xyz123"
                        android:textSize="16sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Teacher Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/createdByText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Sarah Johnson"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Enhanced Materials List Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="#E8EEF3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <!-- Materials Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:paddingBottom="16dp">

                <View
                    android:layout_width="3dp"
                    android:layout_height="20dp"
                    android:background="#4285F4"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Class Materials"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:letterSpacing="0.01" />

            </LinearLayout>

            <!-- Subtle Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3F4F6"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="8dp" />

            <!-- Enhanced RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/materialsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideOverlay" />

            <!-- Buttons Section - Side by Side Vertically -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FAFBFC"
                android:gravity="center_horizontal">

                <!-- View Uploads Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewUploads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Uploads"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/black"/>

                <!-- Upload Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUploadFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="@color/black"/>

                <!-- Stats or Info Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last updated today"
                    android:textSize="12sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Fragment container, initially hidden -->
            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@android:color/white" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Enhanced Upload FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/uploadFileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#4285F4"
        app:tint="@android:color/white"
        app:elevation="6dp"
        app:pressedTranslationZ="8dp"
        app:borderWidth="0dp"
        android:contentDescription="Upload File" />

</LinearLayout>