<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Enhanced Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Files"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share materials with your class"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="32dp" />


    <!-- Enhanced Select File Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelectFile"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Select File"
        android:textSize="16sp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:icon="@android:drawable/ic_menu_upload"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:cornerRadius="12dp"
        app:strokeColor="#4285F4"
        app:strokeWidth="2dp"
        android:textColor="#4285F4"
        android:layout_marginBottom="16dp" />

    <!-- Enhanced Selected File Display -->
    <TextView
        android:id="@+id/tvSelectedFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:minHeight="48dp" />


    <!-- Enhanced Upload Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Upload to Cloud"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/black"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/stat_sys_upload"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Enhanced Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="12dp"
        android:progressTint="@color/colorPrimary"
        android:progressBackgroundTint="@color/black"
        android:visibility="gone" />

    <!-- Enhanced Status Text -->
    <TextView
        android:id="@+id/tvUploadStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to upload"
        android:textSize="13sp"
        android:textColor="@color/black"

        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Enhanced Support Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📁 Supported formats: PDF, Images"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="12dp"
        />

</LinearLayout>